<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context="richard.rmysql.MainActivity"
			tools:showIn="@layout/app_bar_main">
	<LinearLayout
		android:id="@+id/content_connection_page"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:orientation="vertical">
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:id="@+id/dialog_create_address"
				android:hint="@string/dialog_create_address"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:id="@+id/dialog_create_username"
				android:hint="@string/dialog_create_username"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:inputType="textPassword"
				android:id="@+id/dialog_create_password"
				android:hint="@string/dialog_create_password"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:id="@+id/dialog_create_schema"
				android:hint="@string/dialog_create_schema"/>
		</android.support.design.widget.TextInputLayout>
		<CheckBox
			style="@style/DialogText"
			android:id="@+id/dialog_create_use_ssh"
			android:text="@string/dialog_create_use_ssh"/>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:id="@+id/dialog_create_ssh_address"
				android:hint="@string/dialog_create_ssh_address"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:id="@+id/dialog_create_ssh_username"
				android:hint="@string/dialog_create_ssh_username"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:inputType="textPassword"
				android:id="@+id/dialog_create_ssh_password"
				android:hint="@string/dialog_create_ssh_password"/>
		</android.support.design.widget.TextInputLayout>
	</LinearLayout>
</ScrollView>