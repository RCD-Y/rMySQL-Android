<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/dialog_select"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:orientation="vertical"
	tools:ignore="NestedWeights"
	tools:context="richard.rmysql.MainActivity">
	<TextView
		style="@style/DialogText"
		android:text="@string/dialog_select_sel_from"/>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<EditText
			android:layout_weight="1.0"
			style="@style/DialogText"
			android:id="@+id/dialog_select_table_name"
			android:hint="@string/dialog_select_table_name"/>
		<Button
			style="@style/ChoiceButton"
			android:id="@+id/dialog_select_choice_table"/>
	</LinearLayout>
	<TextView
		style="@style/DialogText"
		android:text="@string/dialog_select_where"/>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="horizontal"
			android:layout_weight="0.45"
			android:layout_width="0dp"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:layout_weight="1.0"
				android:id="@+id/dialog_select_flag_field"
				android:hint="@string/dialog_select_flag_field"/>
			<Button
				style="@style/ChoiceButton"
				android:id="@+id/dialog_select_choice_field"/>
		</LinearLayout>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.1"
			android:textAlignment="center"
			android:layout_marginTop="12dp"
			android:text="@string/dialog_select_equals"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_weight="0.45"
			android:layout_width="0dp"
			android:layout_height="wrap_content">
			<EditText
				style="@style/DialogText"
				android:layout_weight="1.0"
				android:id="@+id/dialog_select_flag_value"
				android:hint="@string/dialog_select_flag_value"/>
		</LinearLayout>
	</LinearLayout>
	<CheckBox
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/dialog_select_use_custom"
		android:text="@string/dialog_select_custom_condition"/>
	<EditText
		style="@style/DialogText"
		android:id="@+id/dialog_select_custom_condition"
		android:hint="@string/dialog_select_custom_example"/>
</LinearLayout>
